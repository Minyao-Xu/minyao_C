/ {
    aliases {
        sw0 = &btn0;
        uart-ext = &uart0;
    };

    gpio_keys {
        compatible = "gpio-keys";

        /* Button on GP20 (GPIO0 controller, pin 20) */
        btn0: button_0 {
            /* Use pull-up, active-low (typical button to GND) */
            gpios = <&gpio0 20 (GPIO_PULL_UP | GPIO_ACTIVE_LOW)>;
            label = "BTN_GP20";
        };
    };
};

&uart0 {
    status = "okay";
    current-speed = <115200>;
};
